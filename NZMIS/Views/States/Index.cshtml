@model IEnumerable<NZMIS.Models.State>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">States</h3>
                    </div>
                    <div class="col-md-6">
                        <div class="text-right">
                            @Html.ActionLink("Add State", "Create", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Country.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StateName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StateCode)
                        </th>
                        <th></th>
                    </tr>

                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StateCode)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
     </div>
</div>