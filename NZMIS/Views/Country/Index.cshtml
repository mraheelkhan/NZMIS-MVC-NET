@model List<NZMIS.Models.Country>
@{
    ViewBag.Title = "Countries";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title">Countries</h3>
                    </div>
                    <div class="col-md-6">
                        <div class="text-right">
                            @Html.ActionLink("Add New", "New", null, new {@class = "btn btn-primary"})
                        </div>
                    </div>
                </div>
                


            </div>
            <div class="card-body p-0">
                <table class="table table-bordered table-hover">
                    <thead style="font-weight: 700;">
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Country Code</td>
                        <td>ISO Code</td>
                        <td>Actions</td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var country in Model)
                    {
                        <tr>
                            <td>@country.ID</td>
                            <td>@country.CountryName</td>
                            <td>@country.CountryCode</td>
                            <td>@country.ISO3166_1</td>
                            <td>
                                
                                <a href="Country/Edit/@country.ID" class="btn btn-info btn-xs">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="Country/Destroy/@country.ID" class="btn btn-danger btn-xs">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

   
                    </tbody>
                </table>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</div>




