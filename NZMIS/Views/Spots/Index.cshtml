@model IEnumerable<NZMIS.Models.Spot>

@{
    ViewBag.Title = "Spot List";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="card-title"> @ViewBag.Title </h3>
                    </div>
                    <div class="col-md-6">
                        <div class="text-right">
                            @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="col-md-12 mt-2">
                    <table class="table table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Area.AreaName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SpotName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SpotCode)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Area.AreaName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpotName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpotCode)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
